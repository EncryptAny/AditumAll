<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        app:srcCompat="@drawable/map_pin"
        android:id="@+id/mapPin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp" />

    <TextView
        android:text="Example AP"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/apName"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/mapPin" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/arrow_red"
        android:id="@+id/downvote"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/count"
        android:layout_marginEnd="21dp" />

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@drawable/arrow_green"
        android:id="@+id/upvote"
        android:layout_width="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/downvote"
        android:layout_marginEnd="38dp" />

    <TextView
        android:text="0"
        android:id="@+id/count"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBaseline="@+id/apName"
        android:layout_alignBottom="@+id/apName"
        android:layout_alignParentEnd="true" />
</RelativeLayout>